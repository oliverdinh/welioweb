@using WaxWelio.Common.Config;
@model WaxWelio.Entities.Result.ClinicResult
@{
    ViewBag.Title = "Edit Clinic";
}
@Html.Partial("_LoginModal")

<div class="row fill">
    <div class="col-lg-2 col-sm-3 col-xs-4 fill padding-0">@Html.Partial("_MenuList")</div>
    <div id="col-details" class="col-lg-10 col-sm-9 col-xs-8 fill padding-0 scroll-y">
        <div class="col-lg-5 col-md-6 col-sm-12 col-xs-12 padding-left-0">
            <div class="header-action-body show-mob"></div>
            @using (Html.BeginForm("Edit", "Clinic", FormMethod.Post, new { @class = "content-body-padding" }))
            {
                <input type="hidden" value="@ViewBag.idSelected" name="selected"/>
                @Html.HiddenFor(model => model.ClinicEmail)
                @Html.HiddenFor(model => model.ClinicId)
                <div class="padding-bot-1 content-body">
                    <h2>Clinic details</h2>
                </div>
                <div class="padding-bot-1">
                    <small>Clinic status (*)</small>
                    @Html.DropDownListFor(model => model.Actived, (SelectList)ViewBag.SignupStatuss,new {  @class = "custom-select pointer"  })
                </div>
                <div class="padding-bot-1">
                    <small>Clinic name (*)</small>
                    @Html.EditorFor(model=>model.ClinicName, new { htmlAttributes = new { @class = "custom-select" } })
                    @Html.ValidationMessageFor(model => model.ClinicName, "", new { @class = "text-danger" })
                </div>
                <div class="padding-bot-1">
                    <small>Street Address - Line 1 (*)</small>
                    @Html.EditorFor(model => model.Street1, new { htmlAttributes = new { @class = "custom-select" } })
                    @Html.ValidationMessageFor(model => model.Street1, "", new { @class = "text-danger" })
                </div>
                <div class="padding-bot-1">
                    <small>Street Address - Line 2</small>
                    @Html.EditorFor(model => model.Street2, new { htmlAttributes = new { @class = "custom-select" } })
                </div>
                <div class="col-md-12 padding-0 padding-bot-1">
                    <div class="col-lg-9 col-sm-9 col-xs-9 padding-left-0">
                        <small>State (*)</small>
                        @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "custom-select" } })
                        @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-3 col-sm-3 col-xs-3 padding-right-0">
                        <small>Postcode (*)</small>
                        @Html.EditorFor(model => model.PostCode, new { htmlAttributes = new { @class = "custom-select" } })
                        @Html.ValidationMessageFor(model => model.PostCode, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="padding-bot-1">
                    <small>Phone number (*)</small>
                    @Html.EditorFor(m => m.Phone, new { htmlAttributes = new { @class = "custom-select", @value = Model.Phone } })
                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                </div>
                <div class="padding-top-2 margin-bot-6">
                    <div class="col-lg-3 col-sm-3 col-xs-4 padding-left-0">
                        <button class="custom-btn action-btn" id="btn-save">Save</button>
                    </div>
                    <div class="col-lg-3 col-sm-3 col-xs-4 padding-right-0">
                        <button type="button" class="custom-btn action-btn cancel-btn" onclick="goBackEditClinic()">Cancel</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>
</script>
@section scripts{
<script>
        function goBackEditClinic() {
            window.location.href = window.baseUrl + '/Clinic/ClinicDetails?id='+'@Model.ClinicId&selected=@ViewBag.idSelected';
        }
    $('#btn-save').click(function () {
        var ok = confirm("Are you sure you want to update these clinic details?");
        if (ok) {
            return true;
        } else {
            return false;
        }
    });
</script>
}
