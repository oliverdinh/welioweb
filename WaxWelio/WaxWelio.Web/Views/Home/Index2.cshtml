<div class="col-lg-12 col-sm-12 col-xs-12 fill">

    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 text-center">
        <div class="home-title">
            <h1>Clinics</h1>
        </div>
        <div class="home-content">
            <div>With WELIO you can now offer your patients</div>
            <div>the convenience of HIPPAA compliant</div>
            <div>telehealth consultations.</div>
        </div>
        <div class="col-lg-12 col-sm-12 col-xs-12 home-btn">
            <div class="col-lg-8 col-sm-8 col-xs-10 col-sm-offset-2 col-xs-offset-1">
                @Html.ActionLink("Sign up", "Signup", "Clinic", null, new {@role = "button", @class = "btn custom-btn btn-home-page"})
            </div>
        </div>
    </div>
    <div id="line-home"></div>
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 text-center">
        <div class="home-title">
            <h1>Patients</h1>
        </div>
        <div class="home-content">
            <div>Welio brings healthcare to you. Speak</div>
            <div>to your clinic if you would like to get</div>
            <div>started with telehealth consultations</div>
        </div>
        <div class="col-lg-12 col-sm-12 col-xs-12 home-btn">
            <div class="col-lg-8 col-sm-8 col-xs-10 col-sm-offset-2 col-xs-offset-1">
                @Html.ActionLink("Tell my clinic", "NotifyClinic", "Clinic", null, new {@class = "btn custom-btn btn-home-page"})
            </div>
        </div>
    </div>
</div>

@section scripts{
    @Html.Partial("_LoginModal")
    <script>
        $(document)
            .ready(function() {
                @*var isModal = '@Request["isLogin"]';
                if (isModal === true || isModal === 'true') {
                    $('#signinModal').modal('show');
                }*@
                $('#btn-signin').click(function () {
                    location.assign("https://login.windows.net/common/oauth2/authorize?response_type=token&client_id=8b71009f-174d-4ca7-b15c-9ef8f173d1d5&redirect_uri=" + baseUrl + "/SkypeForBusiness/Login&resource=https://webdir.online.lync.com");
                });
                
            });
    </script>
}