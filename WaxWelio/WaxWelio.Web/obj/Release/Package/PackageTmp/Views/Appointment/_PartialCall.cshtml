<div class="modal fade" id="callModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document" style="width: 90vw; height: 90vh; min-height: 90vh;">
        <div class="modal-content" style="height: 100%">
            <div class="modal-body" style="width: 100%;height: 100%;padding: 0;margin: 0 auto;">
                <div style="position: absolute; width: 100%; height: 100%; padding: 2px;">
                    <div class="overlay-div" id="overlay-call">
                        <div class="div-over"></div>
                        <img src="/static/images/loading.gif">
                    </div>
                    <div id="call-div" style="height: 100%" class="col-lg-9 col-md-9 col-sm-9 col-xs-6">
                        <div class="row">
                            <div class="call-title">
                                <div class="col-xs-10">
                                    <span class="call-patient-name">Roger Bligh</span>
                                    <p id="call-has-carer">
                                        Carer for <strong>Zac Bligh</strong>
                                    </p>

                                </div>
                                <div class="col-xs-2">
                                    <div id="close-message">
                                        <span class="fa fa-comment-o fa-3"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row" id="list-participant">
                        </div>
                        <div class="end-call">
                            <img src="~/static/images/end-call.png" id="imgEndCall" />
                            <!--<button id="showVideo">Show/Hide video</button>-->
                        </div>
                        <div id="div-noanswer" class="div-noanswer">
                            <div class="main-no-answer">
                                <div class="text-noanser">
                                    <strong>There was no answer</strong>
                                </div>
                                <div class="div-btn-noAnswer">

                                    <div class="btn-try-again">
                                        <img src="~/static/images/try-again-icon.png" id="imgTryAgain" />
                                        <p>Try again</p>
                                    </div>
                                    <div class="btn-exit">
                                        <img src="~/static/images/exit-icon.png" id="imgExit" />
                                        <p>Exit</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="msg-div" class="col-lg-3 col-md-3 col-sm-3 col-xs-6" style="height: 100%; max-height: 100%">
                        <div class="row" id="leftSidebar">
                            <div class="msg-call">
                                <div id="title-msg">
                                    <span>Today</span>
                                </div>
                                <div id="content-msg-call" class="msg-call-content">

                                </div>
                                <!--Is login and show info conversation-->
                                <div class="chat-control">
                                    <div class="input-group">
                                        <input id="msg-value-call" type="text" class="form-control no-border-radius" placeholder="Type a message here">
                                        <span class="input-group-btn">
                                            <button class="btn btn-success no-border-radius" id="btn-send-call" type="button"><i class="glyphicon glyphicon-send"></i></button>
                                        </span>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
